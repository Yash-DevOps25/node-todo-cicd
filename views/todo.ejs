<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List - 12 Factor App</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: #f0f4f8;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            min-height: 100vh;
            padding: 20px;
        }

        h1 {
            font-size: 36px;
            color: #2c3e50;
            margin-bottom: 40px;
            text-align: center;
            font-weight: 600;
            letter-spacing: 2px;
        }

        .task-list {
            width: 100%;
            max-width: 800px;
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-bottom: 40px;
        }

        .task-item {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .task-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .task-description {
            font-size: 18px;
            color: #34495e;
            font-weight: 500;
        }

        .task-completed {
            text-decoration: line-through;
            color: #95a5a6;
        }

        .task-actions {
            display: flex;
            gap: 15px;
        }

        .task-actions a {
            text-decoration: none;
            font-size: 20px;
            color: #3498db;
            transition: color 0.3s ease;
        }

        .task-actions a:hover {
            color: #2980b9;
        }

        .delete {
            color: #e74c3c;
        }

        .delete:hover {
            color: #c0392b;
        }

        .new-task-form {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 20px;
        }

        .new-task-form input[type="text"] {
            padding: 15px;
            width: 80%;
            max-width: 600px;
            font-size: 16px;
            border: 2px solid #ecf0f1;
            border-radius: 8px;
            margin-bottom: 20px;
            outline: none;
            transition: border-color 0.3s ease;
        }

        .new-task-form input[type="text"]:focus {
            border-color: #3498db;
        }

        .new-task-form input[type="submit"] {
            padding: 15px 20px;
            background-color: #2ecc71;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .new-task-form input[type="submit"]:hover {
            background-color: #27ae60;
        }

        .checkbox-list {
            width: 100%;
            max-width: 600px;
            margin-bottom: 40px;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .checkbox-item {
            display: flex;
            align-items: center;
            font-size: 18px;
            color: #34495e;
        }

        .checkbox-item input {
            margin-right: 15px;
            transform: scale(1.2);
        }

        .checkbox-item label {
            font-weight: 500;
        }
    </style>
</head>

<body>

    <h1>12 Factor App - To-Do List</h1>

    <!-- Task List -->
    <div class="task-list">
        <% todolist.forEach(function(todo, index) { %>
        <div class="task-item">
            <div class="task-description <%= todo.completed ? 'task-completed' : '' %>">
                <%- todo.description %>
            </div>

            <div class="task-actions">
                <a href="/todo/edit/<%= index %>">✎</a>
                <a class="delete" href="/todo/delete/<%= index %>">✘</a>
            </div>
        </div>
        <% }); %>
    </div>

    <!-- Predefined Tasks with Checkboxes -->
    <div class="checkbox-list">
        <div class="checkbox-item">
            <input type="checkbox" id="task1" name="task1" />
            <label for="task1">Install and configure Docker</label>
        </div>
        <div class="checkbox-item">
            <input type="checkbox" id="task2" name="task2" />
            <label for="task2">Create a Docker file</label>
        </div>
        <div class="checkbox-item">
            <input type="checkbox" id="task3" name="task3" />
            <label for="task3">Create a Docker image</label>
        </div>
        <div class="checkbox-item">
            <input type="checkbox" id="task4" name="task4" />
            <label for="task4">Create an AWS Cloud account</label>
        </div>
    </div>

    <!-- Add New Task Form -->
    <div class="new-task-form">
        <form action="/todo/add/" method="post">
            <input type="text" name="newtodo" placeholder="What should I do?" required />
            <input type="submit" value="Add Task" />
        </form>
    </div>

</body>

</html>
