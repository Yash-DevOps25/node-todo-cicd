<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>12 Factor App - To-Do List</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f8fb;
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            padding: 20px;
        }

        header {
            background-color: #2C3E50;
            padding: 15px;
            width: 100%;
            text-align: center;
            border-radius: 10px 10px 0 0;
            color: white;
        }

        header img {
            max-width: 200px;
            margin-bottom: 10px;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .todo-container {
            width: 100%;
            max-width: 600px;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .todo-container h2 {
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: #2C3E50;
        }

        .todo-container ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .todo-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background-color: #ecf0f1;
            border-radius: 8px;
            margin-bottom: 15px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
        }

        .todo-item:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .todo-description {
            font-size: 1.2rem;
            color: #2C3E50;
            flex: 1;
            word-wrap: break-word;
        }

        .todo-actions a {
            color: #3498db;
            text-decoration: none;
            margin-left: 10px;
            font-size: 1.4rem;
            transition: color 0.3s ease;
        }

        .todo-actions a:hover {
            color: #2980b9;
        }

        .todo-actions a.delete {
            color: #e74c3c;
        }

        .todo-actions a.delete:hover {
            color: #c0392b;
        }

        .new-task-form {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .new-task-form input[type="text"] {
            width: 75%;
            padding: 12px;
            font-size: 1rem;
            border: 2px solid #ecf0f1;
            border-radius: 8px;
            outline: none;
            transition: border-color 0.3s ease;
        }

        .new-task-form input[type="text"]:focus {
            border-color: #3498db;
        }

        .new-task-form input[type="submit"] {
            width: 20%;
            padding: 12px;
            font-size: 1.1rem;
            color: #fff;
            background-color: #2ecc71;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .new-task-form input[type="submit"]:hover {
            background-color: #27ae60;
        }

        .divider {
            margin: 30px 0;
            border-top: 1px solid #ecf0f1;
        }

        .predefined-tasks {
            margin-top: 30px;
        }

        .predefined-tasks input[type="checkbox"] {
            margin-right: 10px;
        }

        .predefined-tasks label {
            font-size: 1.1rem;
            color: #34495e;
        }

        .predefined-tasks label:hover {
            color: #2980b9;
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 2rem;
            }

            .todo-container {
                width: 100%;
                padding: 20px;
            }

            .new-task-form input[type="text"] {
                width: 70%;
            }

            .new-task-form input[type="submit"] {
                width: 25%;
            }
        }
    </style>
</head>

<body>

    <header>
        <img src="https://evessio.s3.amazonaws.com/customer/f6ac7efa-3821-45db-b7e9-604a1025db1f/event/d3d85cc9-ac6d-456d-8352-454ef5ba5451/media/309157e4-profile_TCS-logo-1024x768-1-optimized.jpg_Large.webp"
            alt="TCS-ION Logo">
        <h1>12 Factor App - To-Do List</h1>
    </header>

    <div class="todo-container">
        <!-- Task List -->
        <h2>Your Tasks</h2>
        <ul>
            <% todolist.forEach(function(todo, index) { %>
                <li class="todo-item">
                    <div class="todo-description <%= todo.completed ? 'completed' : '' %>">
                        <%- todo.description %>
                    </div>
                    <div class="todo-actions">
                        <a href="/todo/edit/<%= index %>"><i class="fas fa-edit"></i></a>
                        <a href="/todo/delete/<%= index %>" class="delete"><i class="fas fa-trash"></i></a>
                    </div>
                </li>
            <% }); %>
        </ul>

        <!-- Add New Task Form -->
        <div class="new-task-form">
            <form action="/todo/add/" method="post">
                <input type="text" name="newtodo" placeholder="What should I do?" required />
                <input type="submit" value="Add Task" />
            </form>
        </div>

        <!-- Divider -->
        <div class="divider"></div>

        <!-- Predefined Tasks -->
        <div class="predefined-tasks">
            <h2>Predefined Tasks</h2>
            <div>
                <input type="checkbox" id="task1">
                <label for="task1">Install and configure Docker</label>
            </div>
            <div>
                <input type="checkbox" id="task2">
                <label for="task2">Create a Docker file</label>
            </div>
            <div>
                <input type="checkbox" id="task3">
                <label for="task3">Create a Docker image</label>
            </div>
            <div>
                <input type="checkbox" id="task4">
                <label for="task4">Create an AWS Cloud account</label>
            </div>
        </div>
    </div>

</body>

</html>
