<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List - 12 Factor App</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: #f9f9f9;
            color: #333;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        h1 {
            font-size: 3rem;
            color: #34495e;
            margin-bottom: 20px;
            text-align: center;
            font-weight: 600;
        }

        .logo-container {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo-container img {
            max-width: 180px;
            height: auto;
        }

        .todo-container {
            width: 100%;
            max-width: 800px;
            background: #fff;
            border-radius: 12px;
            padding: 50px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .task-list {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .task-item {
            background: #f1f1f1;
            padding: 20px;
            border-radius: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            cursor: pointer;
        }

        .task-item.completed {
            background-color: #dff0d8; /* Light green for completed tasks */
            border-left: 5px solid #28a745;
        }

        .task-item.pending {
            background-color: #f8d7da; /* Light red for pending tasks */
            border-left: 5px solid #dc3545;
        }

        .task-description {
            font-size: 1.3rem;
        }

        .task-description.completed {
            text-decoration: line-through;
            color: #7f8c8d;
        }

        .task-actions a {
            color: #3498db;
            text-decoration: none;
            font-size: 1.5rem;
        }

        .task-actions a.delete {
            color: #e74c3c;
        }

        .task-actions a.edit:hover {
            color: #f39c12;
        }

        .new-task-form {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-top: 30px;
        }

        .new-task-form input[type="text"] {
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 1.2rem;
            outline: none;
        }

        .new-task-form input[type="submit"] {
            padding: 15px 40px;
            background-color: #2ecc71;
            border: none;
            border-radius: 8px;
            color: #fff;
            font-size: 1.2rem;
            cursor: pointer;
        }

        .new-task-form input[type="submit"]:hover {
            background-color: #27ae60;
        }

        .predefined-tasks {
            margin-top: 40px;
            background-color: #ecf0f1;
            padding: 25px;
            border-radius: 10px;
        }

        .predefined-tasks .checkbox-item {
            display: flex;
            align-items: center;
            font-size: 1.2rem;
            margin-bottom: 15px;
        }

        .checkbox-item label {
            margin-left: 12px;
            font-size: 1.2rem;
        }

        .footer {
            margin-top: 40px;
            text-align: center;
        }

        .footer p {
            font-size: 1rem;
            color: #7f8c8d;
        }

        @media (max-width: 768px) {
            .todo-container {
                padding: 30px;
            }
        }
    </style>
</head>

<body>

    <div class="logo-container">
        <img src="https://evessio.s3.amazonaws.com/customer/f6ac7efa-3821-45db-b7e9-604a1025db1f/event/d3d85cc9-ac6d-456d-8352-454ef5ba5451/media/309157e4-profile_TCS-logo-1024x768-1-optimized.jpg_Large.webp" alt="TCS-iON Logo">
    </div>

    <h1>12 Factor App - To-Do List</h1>

    <div class="todo-container">
        <div class="task-list" id="taskList">
            <!-- Tasks will be added here dynamically -->
        </div>

        <div class="new-task-form">
            <form id="taskForm">
                <input type="text" id="newTask" placeholder="Add a new task" required />
                <input type="submit" value="Add Task" />
            </form>
        </div>

        <div class="predefined-tasks">
            <div class="checkbox-item">
                <input type="checkbox" id="task1" name="task1" />
                <label for="task1">Install and configure Docker</label>
            </div>
            <div class="checkbox-item">
                <input type="checkbox" id="task2" name="task2" />
                <label for="task2">Create a Docker file</label>
            </div>
            <div class="checkbox-item">
                <input type="checkbox" id="task3" name="task3" />
                <label for="task3">Create a Docker image</label>
            </div>
            <div class="checkbox-item">
                <input type="checkbox" id="task4" name="task4" />
                <label for="task4">Create an AWS Cloud account</label>
            </div>
        </div>
    </div>

    <div class="footer">
        <p>&copy; 2025 To-Do List App | Created by Your Team</p>
    </div>

    <script>
        const taskForm = document.getElementById('taskForm');
        const taskList = document.getElementById('taskList');

        taskForm.addEventListener('submit', function (e) {
            e.preventDefault();
            const newTask = document.getElementById('newTask').value;
            addTask(newTask);
            document.getElementById('newTask').value = ''; // Clear the input field
            alert('Task added successfully!');
        });

        function addTask(taskDescription) {
            const taskItem = document.createElement('div');
            taskItem.classList.add('task-item', 'pending');

            const taskText = document.createElement('div');
            taskText.classList.add('task-description');
            taskText.textContent = taskDescription;

            taskText.addEventListener('click', function () {
                toggleTaskCompletion(taskItem, taskText);
            });

            const taskActions = document.createElement('div');
            taskActions.classList.add('task-actions');

            const deleteIcon = document.createElement('a');
            deleteIcon.classList.add('delete');
            deleteIcon.innerHTML = '<i class="fas fa-trash"></i>';
            deleteIcon.addEventListener('click', function () {
                taskItem.remove();
            });

            taskActions.appendChild(deleteIcon);
            taskItem.appendChild(taskText);
            taskItem.appendChild(taskActions);
            taskList.appendChild(taskItem);
        }

        function toggleTaskCompletion(taskItem, taskText) {
            if (taskItem.classList.contains('completed')) {
                taskItem.classList.remove('completed');
                taskItem.classList.add('pending');
                taskText.classList.remove('completed');
            } else {
                taskItem.classList.remove('pending');
                taskItem.classList.add('completed');
                taskText.classList.add('completed');
            }
        }
    </script>

</body>

</html>
